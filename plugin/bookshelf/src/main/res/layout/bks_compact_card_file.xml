<?xml version="1.0" encoding="utf-8"?>
<org.fbreader.plugin.library.view.FileView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	style="?attr/compactCardViewStyle"
>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
	>
		<ImageView
			android:id="@+id/bks_file_icon"
			android:layout_width="@dimen/compact_card_image_widht"
			android:layout_height="@dimen/compact_card_image_height"
			android:scaleType="fitCenter"
			android:layout_marginLeft="@dimen/compact_card_image_margin_left"
			android:layout_marginTop="@dimen/compact_card_image_margin_vertical"
			android:layout_marginBottom="@dimen/compact_card_image_margin_vertical"
			android:contentDescription="@string/desc_file_icon"
		/>
		<TextView
			android:id="@+id/bks_file_name"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="@dimen/compact_card_text_padding_horizontal"
			android:paddingRight="@dimen/compact_card_text_padding_horizontal"
			android:paddingTop="@dimen/compact_card_text_padding_vertical"
			android:paddingBottom="@dimen/compact_card_text_padding_vertical"
			android:lines="2"
			android:textSize="@dimen/compact_card_text_size"
			android:gravity="center_vertical"
		/>
	</LinearLayout>
</org.fbreader.plugin.library.view.FileView>
