<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?attr/mainBackgroundColor"
	android:orientation="vertical"
>
	<TextView
		android:id="@+id/bks_book_popup_more"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		style="?attr/flatButtonStyle"
		android:textSize="@dimen/popup_action_text_size"
		android:text="@string/book_action_more"
	/>
	<TextView
		android:id="@+id/bks_book_popup_read"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_toLeftOf="@id/bks_book_popup_more"
		style="?attr/flatButtonStyle"
		android:textSize="@dimen/popup_action_text_size"
		android:text="@string/book_action_read"
	/>
	<TextView
		android:id="@+id/bks_book_popup_cancel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_toLeftOf="@id/bks_book_popup_read"
		style="?attr/flatButtonStyle"
		android:textSize="@dimen/popup_action_text_size"
		android:text="@string/button_cancel"
	/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:padding="@dimen/popup_item_padding"
		android:orientation="horizontal"
		android:layout_above="@id/bks_book_popup_more"
	>
		<ImageView
			android:id="@+id/bks_book_popup_cover"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:maxWidth="@dimen/popup_max_cover_width"
			android:scaleType="fitStart"
			android:adjustViewBounds="true"
			android:contentDescription="@string/desc_book_cover"
		/>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:paddingLeft="@dimen/popup_text_padding"
			android:paddingRight="@dimen/popup_text_padding"
		>
			<TextView
				android:id="@+id/bks_book_popup_header"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			/>
			<ScrollView
				android:scrollbars="vertical"
				android:fadeScrollbars="true"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
			>
				<android.patches.JellyBeanSpanFixTextView
					android:id="@+id/bks_book_popup_description"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
				/>
			</ScrollView>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
