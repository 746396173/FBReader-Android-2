<resources>
	<style name="FBReaderMD.Activity" parent="@style/Theme.AppCompat.NoActionBar">
		<item name="android:textColorPrimary">@color/text_primary</item>
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary_dark</item>
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorPrimaryDrawable">@drawable/md_primary_color</item>
		<item name="titleOnlyTextAppearance">@style/FBReaderMD.TextAppearance.TitleOnly</item>
		<item name="titleTextAppearance">@style/FBReaderMD.TextAppearance.Title</item>
		<item name="subtitleTextAppearance">@style/FBReaderMD.TextAppearance.Subtitle</item>
		<item name="actionBarTheme">@style/FBReaderMD.ActionBar</item>
		<item name="popupTheme">@style/FBReaderMD.MainMenu</item>
		<item name="listProgressIndicatorStyle">@style/FBReaderMD.ListProgressIndicator</item>
		<item name="numberPickerStyle">@style/FBReaderMD.NumberPicker.Dark</item>
		<item name="sliderStyle">@style/FBReaderMD.Slider</item>
		<item name="alertDialogTheme">@style/FBReaderMD.Dialog</item>
		<item name="android:buttonStyle">@style/FBReaderMD.Button</item>
	</style>
	<style name="FBReaderMD.Dialog" parent="@style/Theme.AppCompat.Dialog">
		<item name="android:textColorPrimary">@color/text_primary</item>
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary_dark</item>
		<item name="colorPrimaryDrawable">@drawable/md_primary_color</item>
		<item name="titleOnlyTextAppearance">@style/FBReaderMD.TextAppearance.TitleOnly</item>
		<item name="titleTextAppearance">@style/FBReaderMD.TextAppearance.Title</item>
		<item name="subtitleTextAppearance">@style/FBReaderMD.TextAppearance.Subtitle</item>
		<item name="android:windowBackground">@drawable/md_dialog_background_dark</item>
		<item name="android:listDivider">@drawable/md_horizontal_divider</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="actionBarTheme">@style/FBReaderMD.ActionBar</item>
		<item name="popupTheme">@style/FBReaderMD.MainMenu</item>
		<item name="listProgressIndicatorStyle">@style/FBReaderMD.ListProgressIndicator</item>
		<item name="numberPickerStyle">@style/FBReaderMD.NumberPicker.Dark</item>
		<item name="sliderStyle">@style/FBReaderMD.Slider</item>
		<item name="alertDialogTheme">@style/FBReaderMD.Dialog</item>
		<item name="android:buttonStyle">@style/FBReaderMD.Button</item>
	</style>
	<style name="FBReaderMD.Dialog.Translucent" parent="@style/FBReaderMD.Dialog">
		<item name="android:background">@null</item>
		<item name="background">@null</item>
		<item name="android:windowBackground">@color/semi_transparent</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:backgroundDimEnabled">false</item>
		<item name="android:windowAnimationStyle">@null</item>
	</style>

	<style name="FBReaderMD.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
		<item name="actionMenuTextColor">?android:attr/textColorPrimary</item>
	</style>
	<style name="FBReaderMD.MainMenu" parent="@style/ThemeOverlay.AppCompat.Dark">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="FBReaderMD.TextAppearance.TitleOnly" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">19sp</item>
		<item name="android:textColor">?android:attr/textColorPrimary</item>
	</style>
	<style name="FBReaderMD.TextAppearance.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">?android:attr/textColorPrimary</item>
	</style>
	<style name="FBReaderMD.TextAppearance.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">?android:attr/textColorPrimary</item>
	</style>

	<style name="FBReaderMD.ListProgressIndicator" parent="">
		<item name="mlpb_background_color">?attr/colorPrimary</item>
		<item name="mlpb_progress_color">?android:attr/textColorPrimary</item>
		<item name="android:visibility">gone</item>
	</style>

	<style name="FBReaderMD.Slider" parent="android:Widget">
		<item name="activeSectionColor">?attr/colorAccent</item>
		<item name="inactiveSectionColor">?android:attr/textColorPrimary</item>
		<item name="sliderLineWidth">2dp</item>
		<item name="activeBallRadius">9dp</item>
		<item name="ballHighlightingRadius">20dp</item>
		<item name="ballHighlightingColor">#44888888</item>
		<item name="sliderMinWidth">80dp</item>
		<item name="sliderMinHeight">48dp</item>
	</style>

	<style name="FBReaderMD.Button" parent="Widget.AppCompat.Button">
		<item name="android:textColor">@color/button_text</item>
	</style>

	<style name="FBReaderMD.NumberPicker" parent="NPWidget.NumberPicker">
		<item name="solidColor">@android:color/transparent</item>
		<item name="selectionDividerHeight">3dp</item>
		<item name="internalLayout">@layout/number_picker_with_selector_wheel</item>
		<item name="internalMinWidth">64dp</item>
		<item name="internalMaxHeight">180dp</item>
	</style>
	<style name="FBReaderMD.NumberPicker.Dark" parent="FBReaderMD.NumberPicker">
		<item name="selectionDivider">@drawable/md_numberpicker_divider_dark</item>
		<item name="virtualButtonPressedDrawable">@drawable/item_background_holo_dark</item>
	</style>
	<style name="FBReaderMD.NumberPicker.Light" parent="FBReaderMD.NumberPicker">
		<item name="selectionDivider">@drawable/md_numberpicker_divider_light</item>
		<item name="virtualButtonPressedDrawable">@drawable/item_background_holo_light</item>
	</style>
</resources>
