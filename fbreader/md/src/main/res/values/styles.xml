<resources>
	<style name="FBReaderMD.Activity" parent="@style/Theme.AppCompat.NoActionBar">
		<item name="android:textColorPrimary">@color/text_primary</item>
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary_dark</item>
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorPrimaryDrawable">@drawable/primary_color</item>
		<item name="titleTextAppearance">@style/FBReaderMD.TextAppearance.Title</item>
		<item name="subtitleTextAppearance">@style/FBReaderMD.TextAppearance.Subtitle</item>
		<item name="actionBarTheme">@style/FBReaderMD.ActionBar</item>
		<item name="popupTheme">@style/FBReaderMD.MainMenu</item>
	</style>
	<style name="FBReaderMD.Dialog" parent="@style/Theme.AppCompat.Dialog">
		<item name="android:textColorPrimary">@color/text_primary</item>
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary_dark</item>
		<item name="colorPrimaryDrawable">@drawable/primary_color</item>
		<item name="android:windowBackground">@color/background_material_dark</item>
		<item name="android:listDivider">@drawable/horizontal_divider</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="actionBarTheme">@style/FBReaderMD.ActionBar</item>
		<item name="popupTheme">@style/FBReaderMD.MainMenu</item>
	</style>
	<style name="FBReaderMD.Dialog.Translucent" parent="@style/FBReaderMD.Dialog">
		<item name="android:background">@null</item>
		<item name="background">@null</item>
		<item name="android:windowBackground">@color/semi_transparent</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:backgroundDimEnabled">false</item>
		<item name="android:windowAnimationStyle">@null</item>
	</style>

	<style name="FBReaderMD.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
		<item name="actionMenuTextColor">?android:attr/textColorPrimary</item>
	</style>
	<style name="FBReaderMD.MainMenu" parent="@style/ThemeOverlay.AppCompat.Dark">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="FBReaderMD.TextAppearance.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">?android:attr/textColorPrimary</item>
	</style>
	<style name="FBReaderMD.TextAppearance.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">?android:attr/textColorPrimary</item>
	</style>
</resources>
